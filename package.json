{
  "name": "slasher",
  "description": "manifest.json description",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:production": "wxt zip --mode production",
    "zip:firefox": "wxt zip -b firefox",
    "zip:firefox:production": "wxt zip -b firefox --mode production",
    "submit:init": "wxt submit init",
    "submit:dry-run": "wxt submit --dry-run --chrome-zip .output/slasher-0.0.0-chrome.zip --firefox-zip .output/slasher-0.0.0-firefox.zip --firefox-sources-zip .output/slasher-0.0.0-sources.zip",
    "submit:submit": "wxt submit --chrome-zip .output/slasher-0.0.0-chrome.zip --firefox-zip .output/slasher-0.0.0-firefox.zip --firefox-sources-zip .output/slasher-0.0.0-sources.zip",
    "test": "bun run build && bun run build:firefox && bunx playwright test",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@tailwindcss/vite": "^4.1.17",
    "caret-pos": "^2.0.0",
    "micromatch": "^4.0.8",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.0.280",
    "@types/micromatch": "^4.0.10",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@wxt-dev/module-react": "^1.1.5",
    "typescript": "^5.9.3",
    "vite-plugin-node-polyfills": "^0.24.0",
    "wxt": "^0.20.11"
  }
}
